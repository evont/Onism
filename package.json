{
  "private": true,
  "name": "root",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "cz": "git-cz",
    "dev": "yarn workspace @onism/$WP run start",
    "dev:image-slice": "cross-env WP=image-slice-loader yarn dev",
    "dev:webp-convert": "cross-env WP=webp-convert-loader yarn dev",
    "dev:webpack-base": "cross-env WP=webpack-css-image-base yarn dev",
    "build": "yarn workspace @onism/$WP run build",
    "build:image-slice": "cross-env WP=image-slice-loader yarn build",
    "build:webp-convert": "cross-env WP=webp-convert-loader yarn build",
    "build:webpack-base": "cross-env WP=webpack-css-image-base yarn build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.1",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3",
    "typescript": "^4.4.3"
  }
}
