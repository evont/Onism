{
  "private": true,
  "name": "root",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "cz": "git-cz",
    "bootstrap": "pnpm i -w",
    "task": "node ./script/task.js",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-emoji"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/node": "^16.9.1",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-emoji": "^1.0.2",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "husky": "^7.0.2",
    "inquirer": "^8.1.5",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "loader-utils": "^2.0.0",
    "postcss": "^8.3.8"
  }
}
